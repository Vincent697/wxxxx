.condition{
    background-color: #f5f5f5;
    overflow: hidden;
    color: #444444;
    font-size: 16px;
    font-family:"微软雅黑",Arial,Helvetica,sans-serif;
}
.condition-top{
    height: 50px;
    line-height: 50px;
    padding:0 30rpx;
}
.select-his{
    
}
.select-his-title{
    height: 45px;
    line-height: 45px;
    padding:0 30rpx;
    background: #ebebeb
}
.his-con{
    padding: 15px 30rpx 5px 30rpx;
}
.his-list{
    background: #ffffff;
    margin-right:5%; 
    margin-bottom: 10px;
    width: 30%;
    height: 30px;
    line-height: 30px;
    float: left;
    text-align: center;
    border: 1px solid #e6e6e6;  
    box-sizing: border-box; 
    border-radius: 3px
}
.his-list:nth-child(3n){
     margin-right:0; 
}
.condition-center{

}
.condition-center .title{
    height: 45px;
    line-height: 45px;
    padding:0 30rpx;
    background: #ebebeb
}
.condition-center .condition-select{
    padding:0 30rpx;
    margin-top: 10px;
    padding-bottom: 20px;
}
.select-list{
    height: 40px;
    line-height: 40px;
    border-bottom: 1px solid #cacaca;  
} 
.condition-select .select-list:last-child{
    border-bottom: none;  
}
.noselected{
     color: #999;
}