/**index.wxss**/

page {
  background: #fff;
}

.content {
  display: block;
  height: 100%;
  width: 100%;
  overflow-x: hidden;
  font-size: 11pt;
}

.zl-logo {
  margin: 0 auto;
}

.zl-logo image {
  width: 70%;
  display: block;
  margin: 260rpx auto 120rpx;
}

.searchbox {
  display: flex;
  flex-direction: row;
  margin: 0 30rpx;
  padding: 10px 15px;
  border-radius: 5px;
  box-shadow: 0px 0px 15px #d2d2d2;
}

.select-label {
  height: 30px;
  line-height: 30px;
  font-size: 12pt;
  padding-right: 35rpx;
  position: relative;
}

.select-label image {
  position: absolute;
  top: 12px;
  right: 0;
  margin-left: 5px;
}

.line {
  width: 1px;
  background: #bdbdbd;
  margin: 0 30rpx;
}

.input-box {
  flex: 1;
  display: block;
  border-radius: 5px;
  height: 30px;
  line-height: 30px;
  color: #bcbcbc;
  font-size: 12pt;
}

.input-box image {
  margin-right: 10px;
  position: relative;
  top: 3px;
}
