/* search start*/

.search-panel {
  display: flex;
  flex-direction: row;
  padding: 30rpx 0 30rpx 30rpx;
}

.searchbox {
  display: flex;
  flex: 1;
  flex-direction: row;
  padding: 8px 15px;
  border-radius: 5px;
  background: #fff;
}

.select-label {
  height: 25px;
  line-height: 25px;
  position: relative;
  padding-right: 35rpx;
}

.select-label image {
  margin-left: 5px;
  position: absolute;
  top: 10px;
}

.line {
  width: 1px;
  background: #bdbdbd;
  margin: 0 30rpx;
}

.input-box {
  display: flex;
  flex: 1;
  border-radius: 5px;
  height: 25px;
  line-height: 25px;
  color: #bcbcbc;
}

.input-box image {
  position: relative;
  top: 4px;
  margin-right: 5px;
}

.input-box input {
  flex: 1;
}

.cancel {
  padding: 8px 15px;
  height: 25px;
  line-height: 25px;
  color: #999;
}

.select-item {
  position: absolute;
  top: 30px;
  right: 50%;
  margin-right: -42px;
  padding: 5px 0;
  width: 84px;
  background: #fff;
  box-shadow: 0px 3px 11px #bfbfbf;
  z-index: 999;
}

.select-item .items {
  width: 100%;
  text-align: center;
  height: 25px;
  line-height: 25px;
}

