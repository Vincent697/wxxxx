.wrap {
  padding: 30rpx;
  background: #fff;
  margin-bottom: 20rpx;
}

.wrap-title {
  position: relative;
}

.wrap-title .title {
  display: block;
  margin-bottom: 20rpx;
}

.wrap-title .oprate {
  position: absolute;
  top: 0px;
  right: 0px;
  color: #999;
  padding-left: 22px;
}

.wrap-title .oprate image {
  position: relative;
  top: 2px;
  right: 4px;
}

.search-block {
  display: flex;
  flex-direction: row;
  flex-wrap: wrap;
  justify-content: flex-start;
}

.search-block .item {
  box-sizing: border-box;
  background: #f5f5f5;
  padding: 15rpx 15rpx;
  margin-bottom: 10px;
  border-radius: 8px;
  font-size: 11pt;
  white-space: nowrap;
  text-overflow: ellipsis;
  overflow: hidden;
  text-align: center;
}

.search-block text {
  font-size: 10pt;
}

.search-block .his {
  margin-right: 25rpx;
}

.hot-block {
  display: block;
}

.hot-block .item-wrap {
  display: block;
}

.hot-block .item {
  display: inline-block;
  box-sizing: border-box;
  background: #f5f5f5;
  padding: 15rpx 15rpx;
  margin-bottom: 10px;
  border-radius: 8px;
  font-size: 11pt;
  white-space: nowrap;
  text-overflow: ellipsis;
  overflow: hidden;
  max-width: 100%;
}

.hot-block text {
  font-size: 10pt;
}

.hot-block .his {
  margin-right: 25rpx;
}
